<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiyaHero.PaymentMethodsPage"
             Title="Payment Methods">

    <StackLayout Padding="20">
        <Label Text="Choose your payment method:" 
               FontSize="20"
               HorizontalOptions="Center" />

        <Button x:Name="CreditCardButton"
                Text="Credit/Debit Card (Stripe)" 
                Clicked="OnCreditCardButtonClicked" 
                Margin="10"
                BackgroundColor="#0c7151"
                HeightRequest="50" />

        <Button x:Name="CashButton"
                Text="Cash (Default)" 
                Clicked="OnCashOnDeliveryButtonClicked" 
                Margin="10"
                BackgroundColor="#0c7151"
                HeightRequest="50" />

        <Button x:Name="PayPalButton"
                Text="PayPal" 
                Clicked="OnPayPalButtonClicked" 
                Margin="10"
                BackgroundColor="#0c7151"
                HeightRequest="50" />
    </StackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiyaHero.EditDriverPage"
             Title="Edit Driver Account">

    <ScrollView Padding="20">
        <StackLayout Spacing="15">

            <!-- Driver details form -->
            <Entry x:Name="UsernameEntry" Placeholder="Username" />
            <Entry x:Name="FirstNameEntry" Placeholder="First Name" />
            <Entry x:Name="LastNameEntry" Placeholder="Last Name" />
            <Entry x:Name="VehicleTypeEntry" Placeholder="Vehicle Type" />
            <Entry x:Name="VehiclePlateNumberEntry" Placeholder="Vehicle Plate Number" />
            <Entry x:Name="EmailEntry" Placeholder="Email" />
            <Button Text="Save Changes" Clicked="OnSaveChangesClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>

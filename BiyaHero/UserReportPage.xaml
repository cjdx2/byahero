<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiyaHero.UserReportPage"
             >
    <VerticalStackLayout Padding="5" Margin="10,10,10,0">
        <Label Text="Report"
        FontSize="20"
        FontAttributes="Bold"
        HorizontalTextAlignment="Start"
        />
        
        <Frame HasShadow="False"
           BorderColor="LightGray"
           CornerRadius="10"
           Padding="5"
           HeightRequest="200"
           Margin="0,10,0,5">
            <Editor Placeholder="Input your report here"
                x:Name="ReportEditor"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                HeightRequest="200" />
        </Frame>
        <Button Text="Submit Report" BackgroundColor="#0c7151" TextColor="White" Margin="0,30,0,5" />
    </VerticalStackLayout>

</ContentPage>